#!/usr/bin/env bash

read -p "This is going to upgrade Rancher server, are you sure? " -n 1 -r

echo

if [[ $REPLY =~ ^[Yy]$ ]]
then
	docker pull rancher/server:latest

    docker stop rancher-server

    docker run -d --volumes-from rancher-data --restart always --label io.rancher.container.network=true -p 8080:8080 --name rancher-server rancher/server:latest
fi