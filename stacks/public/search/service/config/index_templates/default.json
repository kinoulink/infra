{
    "template" : "*",
    "settings": {
        "analysis": {
            "analyzer": {
                "my_standard" : {
                    "type" : "standard",
                    "filters": [
                        "lowercase",
                        "asciifolding"
                    ]
                }
            }
        },
        "number_of_replicas": "1",
        "number_of_shards": "1",
        "refresh_interval" : "2s"
    },
    "mappings": {
        "_default_": {
            "dynamic_templates" :
              [
                  {
                      "all_string": {
                          "match": "*",
                          "match_mapping_type": "string",
                          "mapping": {
                              "type": "string",
                              "index": "not_analyzed",
                              "fields" : {
                                  "analyzed" : {
                                      "type" : "string",
                                      "analyzer" : "my_standard"
                                  }
                              }
                          }
                      }
                  }
              ],
            "properties": {

            }
        }
    },
    "aliases" : {
    }
}