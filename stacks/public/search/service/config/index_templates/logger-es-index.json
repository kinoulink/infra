{
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "1"
    },
    "analysis": {
      "analyzer": {
        "my_simple": {
          "tokenizer": "whitespace",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "my_keyword": {
          "tokenizer": "keyword",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "my_path": {
          "tokenizer": "path_hierarchy",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      }
    }
  },
  "mappings": {
    "_default_": {
      "properties": {
        "request": {
          "type": "string",
          "analyzer" : "my_keyword",
          "fields": {
            "path": {
              "type": "string",
              "analyzer": "my_path"
            }
          }
        },
        "body_bytes_sent": {
          "type": "long"
        },
        "programname": {
          "type": "string",
          "analyzer" : "my_keyword"
        },
        "request_params": {
          "type": "string"
        },
        "request_method": {
          "type": "string",
          "analyzer" : "my_keyword"
        },
        "type": {
          "type": "string",
          "analyzer" : "my_keyword"
        },
        "http_host": {
          "type": "string",
          "analyzer" : "my_keyword"
        },
        "http_user_agent": {
          "type": "string",
          "analyzer" : "my_keyword"
        },
        "remote_user": {
          "type": "string",
          "analyzer" : "my_keyword"
        },
        "request_time": {
          "type": "double"
        },
        "host": {
          "type": "string",
          "analyzer" : "my_keyword"
        },
        "severity": {
          "type": "long"
        },
        "remote_addr": {
          "type": "string"
        },
        "procid": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "priority": {
          "type": "long"
        },
        "tags": {
          "type": "string"
        },
        "@timestamp": {
          "format": "dateOptionalTime",
          "type": "date"
        },
        "http_referrer": {
          "type": "string",
          "analyzer" : "my_keyword",
          "fields": {
            "path": {
              "type": "string",
              "analyzer": "my_path"
            }
          }
        },
        "time": {
          "format": "dateOptionalTime",
          "type": "date"
        },
        "facility": {
          "type": "long"
        },
        "severity_label": {
          "type": "string",
          "analyzer" : "my_keyword"
        },
        "facility_label": {
          "type": "string",
          "analyzer" : "my_keyword"
        },
        "status": {
          "type": "long"
        }
      }
    }
  }
}