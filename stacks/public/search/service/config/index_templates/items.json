{
    "template" : "items-v*",
  "settings": {
    "number_of_shards": 1,
    "analysis": {
      "filter": {
        "french_stop": {
          "type": "stop",
          "stopwords": "_french_"
        }
      },
      "analyzer": {
        "my_simple": {
          "tokenizer": "whitespace",
          "filter": [
            "lowercase",
            "asciifolding",
            "french_stop"
          ]
        },
        "my_keyword": {
          "tokenizer": "keyword",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      }
    }
  },
  "mappings": {
    "places": {
      "properties": {
        "type": {
          "type": "integer"
        },
        "title": {
          "type": "string",
          "analyzer": "french",
          "fields": {
            "simple": {
              "type": "string",
              "analyzer": "my_simple"
            }
          }
        },
        "address": {
          "type": "object",
          "properties": {
            "codepost": {
              "type": "integer"
            },
            "city": {
              "type": "string",
              "analyzer": "my_simple",
              "fields": {
                "keyword": {
                  "type": "string",
                  "analyzer": "my_keyword"
                }
              }
            },
            "street": {
              "type": "string",
              "analyzer": "french"
            }
          }
        },
        "location": {
          "type": "geo_point"
        },
        "date": {
          "type": "object",
          "properties": {
            "create": {
              "type": "date",
              "format": "yyyy/MM/dd HH:mm:ss"
            },
            "update": {
              "type": "date",
              "format": "yyyy/MM/dd HH:mm:ss"
            }
          }
        }
      }
    },
    "users": {
      "properties": {
        "type": {
          "type": "integer"
        },
        "title": {
          "type": "string",
          "analyzer": "french",
          "fields": {
            "simple": {
              "type": "string",
              "analyzer": "my_simple"
            }
          }
        },
        "city": {
          "type": "string",
          "analyzer": "french",
          "fields": {
            "keyword": {
              "type": "string",
              "analyzer": "my_keyword"
            }
          }
        },
        "sector": {
          "type": "string",
          "analyzer": "french",
          "fields": {
            "simple": {
              "type": "string",
              "analyzer": "my_simple"
            },
            "keyword": {
              "type": "string",
              "analyzer": "my_keyword"
            }
          }
        },
        "job": {
          "type": "string",
          "analyzer": "french",
          "fields": {
            "simple": {
              "type": "string",
              "analyzer": "my_simple"
            },
            "keyword": {
              "type": "string",
              "analyzer": "my_keyword"
            }
          }
        },
        "age": {
          "type": "integer"
        },
        "location": {
          "type": "geo_point"
        },
        "avatar": {
          "type": "string",
          "analyzer": "keyword"
        },
        "date": {
          "type": "object",
          "properties": {
            "create": {
              "type": "date",
              "format": "yyyy/MM/dd HH:mm:ss"
            },
            "update": {
              "type": "date",
              "format": "yyyy/MM/dd HH:mm:ss"
            }
          }
        }
      }
    }
  },
    "aliases" : {
        "items" : {}
    }
}